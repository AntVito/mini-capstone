<h1>All Products:</h1>

<% @products.each_slice(3) do |three_products| %>

  <div class="row">

    <% three_products.each do |product| %>

      <div class="col-md-4">
        <div class="well">
          <h2>Title: <a href="products/<%= product.id %>"><%= product.title %></a></h2>
          <h2>Info: <%= product.info %></h2>
          
          <h2>Price: <%= product.price %></h2>
          <h2>Seller: <%= product.seller %></h2>
        </div>
      </div>
    <% end %>
  </div>
<% end %>