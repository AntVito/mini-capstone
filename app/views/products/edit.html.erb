  <div class="container">  

    <%= form_tag "/products/#{@product.id}", method: :patch do %>
     <div>
       Product Title: <input 
       type="text" name="title" value="<%= @product.title %>">
     </div>
     <div>
       Product Info:  <input 
       type="text" name="info" value="<%= @product.info %>">
     </div>
     <div>
       Product Price:  <input 
       type="text" name="price" value="<%= @product.price %>">
     </div>
     <div>
       Product Seller:  <input 
       type="text" name="seller" value="<%= @product.seller %>">
     </div>
     <input type="submit" value="Edit Product">
    <% end %>
  </div>